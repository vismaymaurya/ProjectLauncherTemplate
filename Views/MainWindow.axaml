<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProjectLauncherTemplate.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="ProjectLauncherTemplate.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/AC.png"
        Title="Launcher Test"
        Width="1000" Height="650"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="30">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Background Video Layer -->
        <vlc:VideoView Name="VideoBackground" IsVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False"/>

        <!-- Background Layer -->
        <Border Opacity="0.8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#1a1a2e" Offset="0.0"/>
                    <GradientStop Color="#16213e" Offset="0.5"/>
                    <GradientStop Color="#0f3460" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <!-- Optional: Could place an Image control here with Stretch="UniformToFill" -->
             <Image Source="/Assets/william-tate-closeupshot-03.jpg" Stretch="UniformToFill" Opacity="0.5" IsVisible="true"/>
        </Border>

         <!-- Main Content Area -->
        <Grid RowDefinitions="Auto, *, Auto">
            
            <!-- Custom Title Bar Area -->
            <Grid Grid.Row="0" Height="30" Background="Transparent" ColumnDefinitions="Auto, *">
                <TextBlock Text="Launcher Test" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" LetterSpacing="2"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5" Margin="0,0,10,0">
                    <Button Name="MinimizeButton" Background="Transparent" Padding="5" CornerRadius="5" Click="MinimizeButton_Click">
                        <PathIcon Data="M20,14H4V10H20" Width="10" Height="10" Foreground="White"/>
                    </Button>
                    <Button Name="CloseButton" Background="Transparent" Padding="5" CornerRadius="5" Click="CloseButton_Click">
                        <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" Width="10" Height="10" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- News / Central Area -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
                <TextBlock Text="WELCOME" FontSize="48" FontWeight="Black" Foreground="White"/>
                <TextBlock Text="Test Title" FontSize="24" Foreground="#CCCCCC" Margin="0,10,0,0"/>
                
                <TextBlock Text="{Binding GameVersionText}" FontSize="14" Foreground="#AAAAAA" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="2" Background="#CC000000" Padding="20" Height="100">
                <Grid ColumnDefinitions="*, Auto, Auto">
                    <!-- Status & Progress -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
                        <ProgressBar Value="{Binding Progress}" Maximum="100" Height="10" IsVisible="{Binding IsProgressVisible}" Foreground="#e94560" Background="#333333"/>
                    </StackPanel>
                    
                    <!-- Settings Button -->
                    <Button Grid.Column="1" Command="{Binding OpenSettingsCommand}" Margin="20,0,20,0" Background="Transparent" CornerRadius="5" Padding="10">
                         <PathIcon Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.04 4.95,18.95L7.44,17.95C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.04 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" Foreground="White"/>
                    </Button>
                    
                    <!-- Main Button -->
                     <Panel Grid.Column="2" Width="200" Height="60">
                         <Button Command="{Binding LaunchGameCommand}" IsVisible="{Binding IsPlayButtonVisible}" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                 Background="#e94560" Foreground="White" FontSize="20" FontWeight="Bold" CornerRadius="5"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                             PLAY
                         </Button>
                         
                         <Button Command="{Binding UpdateGameCommand}" IsVisible="{Binding IsUpdateButtonVisible}" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                 Background="#3498db" Foreground="White" FontSize="20" FontWeight="Bold" CornerRadius="5"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                             UPDATE
                         </Button>
                     </Panel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
