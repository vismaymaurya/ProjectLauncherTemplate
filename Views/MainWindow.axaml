<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProjectLauncherTemplate.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="ProjectLauncherTemplate.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/AC.png"
        Title="Launcher Template"
        Width="1000" Height="650"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="30">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Background Video Layer -->
        <vlc:VideoView Name="VideoBackground" IsVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False"/>

        <!-- Background Layer -->
        <Border Opacity="0.8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#1a1a2e" Offset="0.0"/>
                    <GradientStop Color="#16213e" Offset="0.5"/>
                    <GradientStop Color="#0f3460" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
             <Image Source="/Assets/background.png" Stretch="UniformToFill" Opacity="0.75" IsVisible="true"/>
        </Border>

         <!-- Main Content Area -->
        <Grid RowDefinitions="Auto, *, Auto">
            
            <!-- Custom Title Bar Area -->
            <Grid Grid.Row="0" Height="30" Background="Transparent" ColumnDefinitions="Auto, *" PointerPressed="TitleBar_PointerPressed">
                <TextBlock Text="Launcher Template" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" LetterSpacing="2"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5" Margin="0,0,10,0">
                    <Button Name="MinimizeButton" Background="Transparent" Padding="5" CornerRadius="5" Click="MinimizeButton_Click">
                         <Image Source="/Assets/minimize.png" Width="20" Height="20"/>
                    </Button>
                    <Button Name="CloseButton" Background="Transparent" Padding="5" CornerRadius="5" Click="CloseButton_Click">
                         <Image Source="/Assets/close (4).png" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- News / Central Area -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
                <TextBlock Text="WELCOME" FontSize="48" FontWeight="Black" Foreground="White"/>
                <TextBlock Text="Test Title" FontSize="24" Foreground="#CCCCCC" Margin="0,10,0,0"/>
                
                <TextBlock Text="{Binding GameVersionText}" FontSize="14" Foreground="#AAAAAA" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="2" Background="#CC000000" Padding="20" Height="100">
                <Grid ColumnDefinitions="*, Auto, Auto">
                    <!-- Status & Progress -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
                        <ProgressBar Value="{Binding Progress}" Maximum="100" Height="10" IsVisible="{Binding IsProgressVisible}" Foreground="#e94560" Background="#333333"/>
                    </StackPanel>
                    
                    <!-- Settings Button -->
                    <Button Grid.Column="1" Command="{Binding OpenSettingsCommand}" Margin="20,0,20,0" Background="Transparent" CornerRadius="5" Padding="10">
                         <Image Source="/Assets/settings.png" Width="30" Height="30"/>
                    </Button>
                    
                    <!-- Main Button -->
                     <Panel Grid.Column="2" Width="200" Height="60">
                         <Button Command="{Binding LaunchGameCommand}" IsVisible="{Binding IsPlayButtonVisible}" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                 Background="#e94560" Foreground="White" FontSize="20" FontWeight="Bold" CornerRadius="5"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                             PLAY
                         </Button>
                         
                         <Button Command="{Binding UpdateGameCommand}" IsVisible="{Binding IsInstallButtonVisible}" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                 Background="#27ae60" Foreground="White" FontSize="20" FontWeight="Bold" CornerRadius="5"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                             INSTALL
                         </Button>

                         <Button Command="{Binding UpdateGameCommand}" IsVisible="{Binding IsUpdateButtonVisible}" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                 Background="#3498db" Foreground="White" FontSize="20" FontWeight="Bold" CornerRadius="5"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                             UPDATE
                         </Button>
                     </Panel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
